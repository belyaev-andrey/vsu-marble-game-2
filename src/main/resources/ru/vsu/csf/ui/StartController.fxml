<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="140.0" minWidth="300.0" prefHeight="140.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.vsu.csf.ui.StartController">
    <VBox spacing="10">
        <HBox alignment="BASELINE_LEFT" spacing="5">
            <Label fx:id="player1Label" text="Enter Player 1 Name:"/>
            <TextField fx:id="player1Name"/>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="BASELINE_LEFT" spacing="5">
            <Label fx:id="player2Label" text="Enter Player 2 Name:"/>
            <TextField fx:id="player2Name"/>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="BASELINE_CENTER" minWidth="100" spacing="3.0">
            <Button fx:id="button" alignment="BASELINE_CENTER" defaultButton="true" onAction="#handleButtonAction"
                    text="Start Game!" textAlignment="CENTER"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </VBox>
</AnchorPane>