<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="250.0" minWidth="450.0" prefHeight="250.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.vsu.csf.ui.GameController">

    <VBox spacing="10">
        <VBox fx:id="player1Box" alignment="BASELINE_LEFT" spacing="10">
            <Label fx:id="player1Name"/>
            <HBox fx:id="player1Balls" minHeight="50" minWidth="100"/>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
        <VBox fx:id="player2Box" alignment="BASELINE_LEFT" spacing="10">
            <Label fx:id="player2Name"/>
            <HBox fx:id="player2Balls" minHeight="50" minWidth="100"/>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
        <HBox alignment="BASELINE_LEFT">
            <Button fx:id="nextStep" onAction="#doNextStep" text="Next Step"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </VBox>

</AnchorPane>